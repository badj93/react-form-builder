{
  "name": "react-form-craft",
  "author": "Sergey Suschevich",
  "license": "MIT",
  "private": false,
  "version": "0.0.1",
  "type": "module",
  "types": "dist/react-form-craft.d.ts",
  "main": "dist/react-form-craft.cjs",
  "module": "dist/react-form-craft.js",
  "files": ["dist"],
  "scripts": {
    "dev": "vite",
    "build": "tsc --p ./tsconfig.json && vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "prepublishOnly": "npm run build",
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/react-form-craft.js",
      "require": "./dist/react-form-craft.cjs"
    }
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      ["@semantic-release/commit-analyzer"],
      ["@semantic-release/release-notes-generator"],
      ["@semantic-release/changelog"],
      ["@semantic-release/npm"],
      ["@semantic-release/git", {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ðŸš€ ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }]
    ]
  }
}
